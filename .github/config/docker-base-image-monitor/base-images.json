{
  "$schema": "https://raw.githubusercontent.com/bauer-group/automation-templates/main/.github/config/docker-base-image-monitor/docker-base-images.schema.json",
  "images": [
    {
      "name": "nocodb",
      "image": "nocodb/nocodb",
      "tag": "latest",
      "variable": "NOCODB_LATEST_DIGEST",
      "description": "NocoDB open source database platform"
    },
    {
      "name": "python-alpine",
      "image": "python",
      "tag": "3.13-alpine",
      "variable": "PYTHON_ALPINE_DIGEST",
      "description": "Python Alpine base image for nocodb-init and nocodb-backup"
    }
  ],
  "settings": {
    "commit-prefix": "chore(deps)",
    "auto-create-variables": true
  }
}
